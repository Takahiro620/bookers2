<%= render 'list', users: @users %>



<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
  
  
  <h1>Books</h1>
  
  <% @books.each do |book| %>
    <div>
      <%= link_to user_path(book.user.id) do %>
      <p>image: <%= image_tag book.user.profile_image, size: "100x100" %></p>
      <% end %>
      <p><%= link_to book.title, book_path(book) %></p>
      <p>Opinion: <%= book.body %></p>
    </div>
  <% end %>