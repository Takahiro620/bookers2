<!-- ユーザーの詳細 -->

<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  </table>
  

  <div class="row">
    <%= link_to edit_user_path(@user) do %>
    <div class="btn btn-outline-secondary btn-block edit_user_112075">
      <i class="fas fa-user-cog" aria-hidden="true">
      </i>
    </dvi>
    <% end %>
  </div>


</div>








<h2 class="mt-3">New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



  
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      

    <%= f.submit 'Create Book', class: "btn btn-block btn-success" %>
  <% end %>

</div>






<div class="col-md-8 offset-md-1">

<h2>Users</h2>

<% @users.each do |user| %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th><%= image_tag user.profile_image, size: "100x100" %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user) %></th>
    </tr>
  </tbody>
</table>
<% end %>

</div>
</div>
</div>