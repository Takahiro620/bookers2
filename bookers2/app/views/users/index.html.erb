<!-- ユーザーの詳細 -->

<div>
  <h1>User info</h1>
  <h3>name:<%= @user.name %></h3>
  <h3>introduction:<%= @user.introduction %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>




<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>










<h1>Users</h1>

<% @users.each do |user| %>
<div>
  <p>image:<%= image_tag user.profile_image, size: "100x100" %></p>
  <p>name：<%= user.name %></p>
  <p><%= link_to "show", user_path(user) %></p>
</div>
<% end %>