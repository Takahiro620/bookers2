<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book)  do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true%>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :body%>
 
  <%= f.submit "Update Book" %>
<% end %>


<p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>