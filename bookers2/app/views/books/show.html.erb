<!-- ユーザーの詳細 -->

<div class="container px-5 px-sm-0">
<div class="row">

<div class="col-md-3">
<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
  </table>
  

  <div class="row">
    <%= link_to edit_user_path(@user) do %>
    <div class="btn btn-outline-secondary btn-block edit_user_112075">
      <i class="fas fa-user-cog" aria-hidden="true">
      </i>
    </dvi>
    <% end %>
  </div>


</div>



<h2 class="mt-3">New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



  
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      

    <%= f.submit 'Create Book', class: "btn btn-block btn-success" %>
  <% end %>

</div>








<div class="col-md-8 offset-md-1">

<div>
  <h1>Book detail</h1>
  <p>Title：<%=link_to @books.title, book_path(@books) %></p>
  <p>Opinion：<%= @books.body %></p>
  <%= link_to user_path(@books.user.id) do %>
  <%= image_tag @books.user.get_profile_image(100,100) %>
  <%= @books.user.name %>
  <% end %>
  <% if @books.user == current_user %>
    <p><%= link_to "Edit", edit_book_path(@books) %></p>
    <%= link_to "Destroy", book_path(@books), method: :delete %>
  <% end %>
</div>


</div>
</div>
</div>