
<!-- ユーザーの詳細 -->
<div>
  <h3>name:<%= @books.user.name  %></h3>
  <h3>introduction:<%= @books.user.introduction %></h3>
  <%= image_tag @books.user.get_profile_image(100,100) %>
  <% if @books.user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@books.user) %></p>
  <% end %>
</div>




<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>













<div>
  <h1>Book detail</h1>
  <p>Title：<%= @books.title %></p>
  <p>Opinion：<%= @books.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @books.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @books.user.name %></p>
  <% if @books.user == current_user %>
    <p><%= link_to "edit", edit_book_path(@books) %></p>
    <%= link_to "destroy", book_path(@books), method: :delete %>
  <% end %>
</div>
